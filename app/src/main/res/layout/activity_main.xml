<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/gradientbackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_20sdp">

                    <ImageView
                        android:id="@+id/img_std_iv"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:src="@drawable/student"/>
                    <TextView
                        android:id="@+id/name_std_tv"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sayed Ahmed"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_20sdp"
                    >

                    <TextView
                        android:id="@+id/id_std_tv"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: 262-25-70421"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/dep_std_tv"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Department: CSE"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/sem_std_tv"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester: 6th"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_200sdp"
            app:cardElevation="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/status_mood_iv"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/happy"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/status_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are eligible for laptop"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:scrollbars="none"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:orientation="horizontal"
        android:gravity="center"

        >

        <LinearLayout
            android:id="@+id/step1_layout"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_190sdp"
            android:background="@drawable/success_gradient"
            android:orientation="vertical"
            android:padding="@dimen/_2sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"
            android:onClick="clicker">

            <ImageView
                android:id="@+id/step1_tick"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/checked"
                android:elevation="@dimen/_10sdp"
                android:paddingTop="@dimen/_8sdp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STEP 1"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/step_1"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                />
            <ImageView
                android:id="@+id/step1_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_info_outline_black_24dp"
                android:layout_marginTop="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step2_layout"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_190sdp"
            android:background="@drawable/error_gradient"
            android:orientation="vertical"
            android:padding="@dimen/_2sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"
            android:onClick="clicker"
            >

            <ImageView
                android:id="@+id/step2_tick"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:paddingTop="@dimen/_8sdp"
                android:src="@drawable/cancel"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STEP 2"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/step_2"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                />

            <ImageView
                android:id="@+id/step2_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_info_outline_black_24dp"
                android:layout_marginTop="@dimen/_10sdp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/step3_layout"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_190sdp"
            android:background="@drawable/success_gradient"
            android:orientation="vertical"
            android:padding="@dimen/_2sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp"
            android:onClick="clicker">

            <ImageView
                android:id="@+id/step3_tick"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/checked"
                android:paddingTop="@dimen/_8sdp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STEP 3"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/step_3"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                />
            <ImageView
                android:id="@+id/step3_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_info_outline_black_24dp"
                android:layout_marginTop="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step4_layout"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_190sdp"
            android:background="@drawable/success_gradient"
            android:orientation="vertical"
            android:padding="@dimen/_2sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"
            android:onClick="clicker">

            <ImageView
                android:id="@+id/step4_tick"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/checked"
                android:paddingTop="@dimen/_8sdp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Final Step"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/step_4"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                />
            <ImageView
                android:id="@+id/step4_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_info_outline_black_24dp"
                android:layout_marginTop="@dimen/_10sdp"/>

        </LinearLayout>


    </LinearLayout>

    </HorizontalScrollView>


</LinearLayout>

</ScrollView>